<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">


<head>
    <% include ./partials/head %>
</head>

<body class="container">

	<header>
		<% include ./partials/header %>
	</header>

	<main>
		<div>
			<h3>Customers</h3>

			<form method="post" action="/user/new">
				<input type="text" name="name" placeholder="Add name">
				<input type="text" name="id" placeholder="Add phone">
				<input type="text" name="lastname" placeholder="Add lastname">
				<input type="text" name="pw" placeholder="Add pw">
				<input type="text" name="username" placeholder="Add username">
				<input type="text" name="email" placeholder="Add email">
				<input type="text" name="street" placeholder="Add street">
				<input type="text" name="city" placeholder="Add city">
				<input type="text" name="zip" placeholder="Add zip">
				<input type="submit" value="Submit">
			</form>
		</div>

		<hr>

		<div class="alert alert-success" role="alert">...</div>

		<ul class="list-group">
		<% users.forEach(function(user){ %>
			<li class="list-group-item"><%= user.name %>, <%= user.last_name %>, <%= user.address.street %>, <%= user.address.zip %>, <%= user.address.city %>, <%= user.pwd %>    </li>
		<% }); %>
		</ul>
	</main>


<footer>
    <% include ./partials/footer %>
</footer>

</body>
</html>